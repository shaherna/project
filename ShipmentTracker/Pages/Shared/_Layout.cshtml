<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShipmentTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShipmentTracker.styles.css" asp-append-version="true" />
    <style>
        header {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: white;
            box-shadow: 0 4px 2px -2px gray;
            z-index:999;
        }

        .main-section {
            margin-top: 130px;
            margin-bottom: 150px;
        }

        .upper-bar .navbar-nav {
            justify-content: end;
            flex-direction: row !important;
        }

        .upper-bar {
            background-color: black;
            padding: 0 5px;
            color:white !important;
        }

            .upper-bar .navbar-nav li {
                margin-left: 10px;
            }

        .navbar-collapse ul li {
            border-bottom: 5px solid transparent;
            font-weight: 500;
            font-size: 20px;
        }

            .navbar-collapse ul li:hover {
                border-bottom: 5px solid red;
            }

        header .navbar-collapse .nav-item {
            width: 200px;
            text-align: center;
        }

        .logo-img img {
            width: 150px;
            position: fixed;
            top: 10px;
        }
           /* .container {
                    max-width: 1400px;
             }*/

             .consultation a.btn-primary {
            background-color: #b1f2ff;
            border-color: #b1f2ff;
            padding: 10px;
            height:50px;
            line-height:normal;
             }

             footer {
                 background-color:black;
                 color:white;
                 padding:20px 0 0;
                 height:auto;

             }

        .fa {
            padding: 20px;
            font-size: 30px;
            width: 50px;
            text-align: center;
            text-decoration: none;
            margin: 5px 2px;
            color:white !important;
        }

            .fa:hover {
                opacity: 0.7;
            }

        .social-links-list{
            margin-bottom:auto;
        }
        .social-links-list li {
            list-style-type: none;
            display:inline;
        }
            .logo-text .brand-name {
            color: #000000;
    text-decoration: none;
    font-weight: 700;
    font-style: normal;
    font-size:40px;
        vertical-align: sub;
        padding-left: 5px;
        }

    </style>
</head>
<body>
    <header>
        <div class="upper-bar row">
            <div class="container">
                <partial name="_LoginPartial" />
            </div>
            

        </div>
        <div class="container" style="height: 90px;">
            <div class="row">
            <div class="logo-text col-sm-3">
                <a asp-page="/Index"></a>
                    <a class="brand-name" asp-page="/Index">
                        ShipTests 
                    </a>
                
</div>

            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light ml-auto col-sm-9">


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Services">Services</a>
                        </li>
                      
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AboutUs">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/InsightsTrends">Statistics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                    </ul>
                </div>

            </nav>
            </div>
        </div>
    </header>
    <div class="container main-section">
        <main role="main" class="p-3">
            @RenderBody()
        </main>
    </div>
     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ShipmentTracker - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>